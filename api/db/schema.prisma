datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

enum Role {
  USER // General (Officier)
  ADMIN
  CLIENT // Council
  CUSTOMER // Real-estate Agent
}

model User {
  id        String       @id @default(uuid())
  issuer    String       @unique // magic.link unique issuer
  role      Role         @default(USER)
  profile   UserProfile?
  email     String       @unique
  logOn     DateTime     @default(now())
  logOff    DateTime?
  createdAt DateTime     @default(now())
}

model UserProfile {
  id        String    @id @default(uuid())
  userId    String    @unique
  companyId String?   @unique
  User      User?     @relation(fields: [userId], references: [id])
  Company   Company?  @relation(fields: [companyId], references: [id])
  avatar    String?
  firstName String?
  lastName  String?
  phone     String?
  mobile    String?
  updatedAt DateTime? @updatedAt
  address   Address?
}

model Company {
  id          String          @id @default(uuid())
  userProfile UserProfile?
  profile     CompanyProfile?
  name        String
  displayName String?
  shortName   String?
  website     String?
  logo        String?
  updatedAt   DateTime?       @updatedAt
  createdAt   DateTime        @default(now())
}

model CompanyProfile {
  id        String    @id @default(uuid())
  companyId String    @unique
  Company   Company?  @relation(fields: [companyId], references: [id])
  phone     String?
  fax       String?
  mobile    String?
  fullName  String?
  email     String?
  abn       String?
  acn       String?
  crn       String?
  address   Address?
  owner     String?
  // Council (Client) role only
  mayor     String?
  updatedAt DateTime? @updatedAt
}

model Address {
  id               String          @id @default(uuid())
  userProfileId    String?         @unique
  companyProfileId String?         @unique
  country          String?
  state            String?
  postalCode       String?
  street           String?
  name             String?
  suburb           String? // city,town,village,suburb,district,county
  updatedAt        DateTime?       @updatedAt
  UserProfile      UserProfile?    @relation(fields: [userProfileId], references: [id])
  CompanyProfile   CompanyProfile? @relation(fields: [companyProfileId], references: [id])
}
