{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "workbench.colorCustomizations": {
    "statusBar.background": "#2aa79b",
    "statusBarItem.hoverBackground": "#8fddb3",
    "statusBar.foreground": "#2a2e37",
    "activityBar.activeBackground": "#8fddb3",
    "activityBar.activeBorder": "#009485",
    "activityBar.background": "#8fddb3",
    "activityBar.foreground": "#009485",
    "activityBar.inactiveForeground": "#3d445199",
    "activityBarBadge.background": "#d676bf",
    "activityBarBadge.foreground": "#f9fafb",
    "titleBar.activeBackground": "#2aa79b",
    "titleBar.activeForeground": "#2a2e37",
    "titleBar.inactiveBackground": "#2aa79b99",
    "titleBar.inactiveForeground": "#2a2e3799"
  },
  "editor.tabSize": 2,
  "css.validate": false
}
